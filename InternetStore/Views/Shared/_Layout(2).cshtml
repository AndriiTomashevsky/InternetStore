<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link href="https://fonts.googleapis.com/css?family=Oswald:700" rel="stylesheet">
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/lib/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>
	<div class="container">
		<header>
			<div class="row">
				<div class="col-12 col-lg-4 col-md-12">
					
					<h1 class="logo"><img class="glyphicon-tag">My<span class="primary">Store</span></h1>
					<p class="subtext">Bootstrap Ecommerce Template</p>
				</div>
				<!--Делаеm колонки 4 и 8, когда ширина экрана больше 992px-->
				<!--Делаеm колонки 12 и 12 когда ширина экрана больше 768px-->
				<div class="col-12 col-lg-8 col-md-12">
					<form class="form-inline my-2 my-lg-0">
						<!--<div class="form-group">
					<label for="exampleInputName2">Name</label>
					<input type="text" class="form-control" id="exampleInputName2" placeholder="Jane Doe">
				</div>-->
						<div class="form-group">
							<label>Email</label>
							<input type="email" class="form-control" placeholder="Enter Email">
						</div>
						<div class="form-group">
							<label>Password</label>
							<input type="password" class="form-control" placeholder="Enter Password">
						</div>

						<button type="submit" class="btn btn-default">Login</button>
					</form>
				</div>
			</div>
		</header>

		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav mr-auto">
					<li class="nav-item active">
						<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Link</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Link</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">Link</a>
					</li>
				</ul>
				<form class="form-inline my-2 my-lg-0">
					<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
					<button class="btn btn-outline-secondary my-2 my-sm-0" type="submit">Search</button>
				</form>
			</div>
		</nav>
		@await Component.InvokeAsync("CartSummary")
		@await Component.InvokeAsync("NavigationMenu")
		@RenderBody()

	</div>

	<!-- Optional JavaScript -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/popper.js/dist/popper.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
