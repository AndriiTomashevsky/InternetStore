<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title</title>
	<link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
	<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
	<link href="~/lib/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>

	<nav class="navbar navbar-expand-sm navbar-dark bg-gradient mb-3 pb-0 pt-0">
		<div class="container-fluid">
			<a class="navbar-brand pb-0 pt-0" href="#"><img src="~/lib/img/logo2_Dark_65x65.png">Fans & Accessories Store</a>
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="#">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">About</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="#">Contact</a>
				</li>
				<li class="nav-item ml-sm-2">
					<form class="form-inline">
						<input type="text" class="form-control" placeholder="Search" />
						<button class="btn btn-outline-success">Search</button>
					</form>
				</li>
			</ul>

		</div>
	</nav>

	<div class="row m-1">
		<div class="col-sm-3">
			@await Component.InvokeAsync("CartSummary")<br />
			@await Component.InvokeAsync("NavigationMenu")
		</div>
		<div class="col-sm-9">
			@RenderBody()
		</div>
	</div>

	<!-- Optional JavaScript -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/popper.js/dist/popper.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
