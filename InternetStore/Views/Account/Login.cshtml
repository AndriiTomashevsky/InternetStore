@model LoginModel

@{
	Layout = null;
	ViewBag.Title = "Log In";
}

<!DOCTYPE html>
<html style="height:100%">
<head>
	<title>Log In</title>
	<link href="~/lib/bootstrap/4.0.0-beta/css/bootstrap.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<style>
		.input-validation-error {
			border-color: red;
			background-color: #fee;
		}

		.form-control.valid {
			border-color: #28a745
		}
	</style>

</head>
<body class="row m-1 p-1" style="height:100%; background-color:#dcdcdc;">
	<div class="card col-lg-4 align-self-center m-auto px-0">

		<div class="bg-primary m-1 p-1 text-white"><h4>Log In</h4></div>

		<form asp-action="Login" method="post">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

			<div class="form-group m-1 p-1">
				<label asp-for="Email">Email:</label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="form-group m-1 p-1">
				<label asp-for="Password">Password:</label>
				<input asp-for="Password" class="form-control" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>

			<div class="m-1 p-1">
				<button class="btn btn-primary" type="submit">Log In</button>
			</div>
		</form>
	</div>

</body>
</html>
