@model Order

@{
	ViewBag.Title = "Checkout";
}

<div class="row">
	<div class="col-sm-4"></div>
	<div class="col-sm-8">
		<h2>Check out now</h2>
		<form asp-action="Checkout" asp-controller="Order" method="post">

			<h3>Ship to:</h3>
			<div class="form-group">
				<label asp-for="Name">Name:</label>
				<input class="form-control" asp-for="Name" />
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>

			<div class="form-group">
				<label asp-for="Adress">Adress: </label>
				<input class="form-control" asp-for="Adress" />
				<span class="text-danger" asp-validation-for="Adress"></span>
			</div>

			<div class="form-group">
				<label asp-for="City">City:</label>
				<input class="form-control" asp-for="City" />
				<span class="text-danger" asp-validation-for="City"></span>
			</div>

			<div class="form-group">
				<label asp-for="Country">Country:</label>
				<input class="form-control" asp-for="Country" />
				<span class="text-danger" asp-validation-for="Country"></span>
			</div>

			<div>
				<input type="checkbox" asp-for="Wrap" />
				<label asp-for="Wrap">Supplement wrap to these items</label>
			</div>

			<div class="text-center" style="margin-top:15px;margin-bottom:45px;">
				<input class="btn btn-primary" type="submit" name="Submit" value="Complete Order" />
			</div>
		</form>
	</div>
</div>